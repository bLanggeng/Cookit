<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.htw.mada.cookit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".CookitApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_cookit_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Cookit" >
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddingActivity"
            android:label="@string/make_recipe"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".ui.ShowRecipeActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".ui.ViewImageActivity" >
        </activity>
    </application>


</manifest>
